<script>
  function get_country_set_city(country){
    $.ajax({
      url: "<%= pages_get_country_set_city_path %>",
      method: "POST",
      data: {country_name : country},
      success:function(data){
        cities = data.cities
        options = '<option value="">Select City</option>'
        for(i=0;i<cities.length;i++){
          options = options + '<option value='+'"'+ cities[i]+'"' +'> ' + cities[i] + '</option>'
        }
        $("#search_city_select").html(
          '<select class="form-control indexsearchbox" name="search_city" >'+
            options+
          '</select>'
        )
      }
    })
  }
</script>
