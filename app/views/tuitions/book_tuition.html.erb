<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h2 style="text-align:center">Book tuition with <% user = User.find(@tutor_profile.user_id)%> <%= user.first_name %><br>
      for <%= number_to_currency(@tutor_profile.hourly_rate, :unit => "&pound;".html_safe) %></h2>
<br>
      <%= form_for @tuition, :url => payment_detail_tutor_profile_tuitions_path, :method => :get do |f| %>

        <div class="row">
          <div class="col-lg-6">
            <%= f.label :hours %>
            <%= f.number_field :hours, :class=>"form-control" %>
          </div>
          <div class="col-lg-6">
            <%= f.label :city %>
            <%= f.text_field :city, :class=>"form-control" %>
          </div>
        </div>
       <br>
        <div class="row">
          <div class="col-lg-12">
            <%= f.label :note %>
            <%= f.text_area :note, :class=>"form-control", placeholder: "Any partcicular requests on how the tuition is to be conducted?" %>
          </div>
        </div>
        <br>
        <div class="row">
          <div class="col-lg-6 col-lg-offset-6">
            <div style="float: right;">
              <%= f.submit "Proceed to Payment", :class => "btn btn-success" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>