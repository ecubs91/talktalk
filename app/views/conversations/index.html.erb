<div class="container">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
<h2>메세지</h2>

<table class="table">
  <thead style="font-weight:700">
    <tr>
      <td>보낸이</td>
      <td>메세지 제목</td>
      <td>보낸 날짜</td>
    </tr>
  </thead>
  <% @conversations.each do |conversation| %>
  <tbody style="color: #545454">
  <% if conversation.last_sender %>
    <tr>
      <td><%= conversation.last_sender.first_name %></td>
      <td><%= link_to raw(truncate(strip_tags(conversation.last_message.subject), :class => "link", :length => 40)),conversation_path(conversation), :class => "link" %></td>
      <td><%= conversation.updated_at.strftime("%m/%e/%Y") %></td>
    </tr>
  <% end %>
  </tbody>
<% end %>
</table>
    </div>
  </div>
    </div>